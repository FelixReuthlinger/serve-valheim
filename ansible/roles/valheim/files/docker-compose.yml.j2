version: "3"

services:
  valheim:
    image: ghcr.io/lloesche/valheim-server
    cap_add:
      - sys_nice
    volumes:
      - "{{ valheim_config_folder }}:/config"
      - "{{ valheim_data_folder }}:/opt/valheim"
    ports:
      - "2456-2457:2456-2457/udp"
      - "9001:9001/tcp"
    env_file:
      - "{{ valheim_folder }}/valheim.env"
    restart: always
    stop_grace_period: 2m
